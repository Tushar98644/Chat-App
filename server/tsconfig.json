{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "moduleResolution": "Node",
        // this option looks for the specific package in the node_modules folder
        "outDir": "build",
        "rootDir": "/",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["./src/*"]
          }
    }
}